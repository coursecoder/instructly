{
  "name": "instructly",
  "version": "0.1.0",
  "private": true,
  "description": "AI-Powered Instructional Design Platform",
  "scripts": {
    "build": "turbo run build",
    "build:web": "turbo run build --filter=web",
    "build:api": "turbo run build --filter=api",
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=web",
    "dev:api": "turbo run dev --filter=api",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "db:setup": "./scripts/setup-database.sh",
    "db:configure": "node scripts/configure-vercel-env.js",
    "db:validate": "node scripts/validate-database.js",
    "db:validate:local": "node scripts/validate-database.js local",
    "db:validate:prod": "node scripts/validate-database.js production",
    "db:deploy-env": "./scripts/deploy-env-to-vercel.sh",
    "health:local": "curl http://localhost:3001/api/health",
    "health:prod": "echo 'Update with your Vercel URL: curl https://your-app.vercel.app/api/health'"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@turbo/gen": "^1.10.12",
    "turbo": "^1.10.12",
    "prettier": "^3.0.3",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "packageManager": "npm@10.2.4"
}