# Environment Variables Template for Instructly Platform
# Copy this file to .env.local and fill in your actual values

# ==========================================
# DATABASE CONFIGURATION (Supabase)
# ==========================================
DATABASE_URL="postgresql://postgres:password@localhost:5432/instructly"
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# ==========================================
# AI SERVICES (OpenAI)
# ==========================================
OPENAI_API_KEY="sk-your-openai-api-key"

# ==========================================
# CACHE (Redis/Upstash)
# ==========================================
REDIS_URL="redis://localhost:6379"
# For Upstash: rediss://default:password@host:port

# ==========================================
# DEPLOYMENT ENVIRONMENT
# ==========================================
VERCEL_ENV="development"
NODE_ENV="development"

# ==========================================
# SECURITY & ENTERPRISE COMPLIANCE
# ==========================================
NEXTAUTH_SECRET="your-nextauth-secret-32-chars-min"
NEXTAUTH_URL="http://localhost:3000"

# ==========================================
# MONITORING & OBSERVABILITY
# ==========================================
SENTRY_DSN="https://your-sentry-dsn"
VERCEL_ANALYTICS_ID="your-vercel-analytics-id"

# ==========================================
# DEVELOPMENT SETTINGS
# ==========================================
# API Server Configuration
API_PORT=3001
API_HOST="0.0.0.0"

# Frontend Configuration
NEXT_PUBLIC_API_URL="http://localhost:3001"
NEXT_PUBLIC_SUPABASE_URL="${SUPABASE_URL}"
NEXT_PUBLIC_SUPABASE_ANON_KEY="${SUPABASE_ANON_KEY}"

# ==========================================
# ENTERPRISE FEATURES (Future Use)
# ==========================================
# AWS S3 Configuration (for file storage)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="instructly-assets"

# SMTP Configuration (for email notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# ==========================================
# PERFORMANCE MONITORING
# ==========================================
# Enable performance tracking for NFR requirements
ENABLE_PERFORMANCE_TRACKING=true
PERFORMANCE_LOG_LEVEL="info"

# AI Cost Tracking Alerts
AI_COST_ALERT_THRESHOLD=0.25  # 25% of revenue threshold
MONTHLY_REVENUE_TARGET=1000   # USD for cost percentage calculations