{
  "version": 2,
  "builds": [
    {
      "src": "apps/web/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "apps/api/src/functions/**/*.ts",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 30
      }
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "/apps/api/src/functions/health"
    },
    {
      "src": "/api/trpc/(.*)",
      "dest": "/apps/api/src/functions/trpc/[trpc]"
    },
    {
      "src": "/(.*)",
      "dest": "/apps/web/$1"
    }
  ]
}